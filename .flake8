[flake8]
# Configuration for flake8 Python linter
max-line-length = 88
extend-ignore = E203,W503,E731,C901,E501,F401

exclude =
    .git,
    __pycache__,
    .venv,
    scraper-env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules

per-file-ignores =
    # Tests can have longer lines, unused imports/variables for fixtures and placeholders
    tests/*:E501,F401,F811,F841,E301
    # __init__.py files can have unused imports (re-exports)
    __init__.py:F401

# Docstring requirements (using flake8-docstrings)
docstring-convention = google
ignore-names =
    setUp,
    tearDown,
    test_*

# Complexity settings
max-complexity = 10
max-cognitive-complexity = 12

# Import order settings (works with isort)
import-order-style = google
application-import-names = scraper_core,providers
